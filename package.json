{
  "name": "tree-sitter-asciimath",
  "version": "0.1.0",
  "description": "Tree-sitter parser for AsciiMath",
  "scripts": {
    "init": "tree-sitter init",
    
    "ts:prepare": "node scripts/generate-symbols.js",
    "generate": "tree-sitter generate",
    "parse": "tree-sitter parse",
    "test": "tree-sitter test",
    "build": "tree-sitter build",
    
    "build:rust": "cd bindings/rust && cargo build --release",
    "test:rust": "cd bindings/rust && cargo test",
    
    "build:node": "node-gyp rebuild",
    "copy:rust-lib": "node copy_rust_lib.js",
    "rebuild": "npm run build:rust && npm run build:node && npm run copy:rust-lib",
    "test:node": "node bindings/node/binding.spec.js",
    
    "uv-prepare": "uv pip install --no-deps --force-reinstall .",
    "test:python": "uv run -m pytest bindings/python/tests/test_binding.py",
    
    "lib:prepare": "npm run build:rust && npm run copy:rust-lib",
    "dev": "npm run rebuild && npm run test:node"
  },
  "keywords": [
    "tree-sitter",
    "asciimath"
  ],
  "author": "widcardw",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4",
    "tree-sitter": "^0.25.0",
    "tree-sitter-cli": "^0.25.10"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1"
  }
}
