{
  "name": "tree-sitter-asciimath",
  "version": "0.1.0",
  "description": "Tree-sitter parser for AsciiMath",
  "scripts": {
    "init": "tree-sitter init",
    "ts:prepare": "node scripts/generate-symbols.js",
    "ts:generate": "tree-sitter generate",
    "ts:parse": "tree-sitter parse",
    "ts:test": "tree-sitter test",
    "ts:build": "tree-sitter build",
    "rust:build": "cd bindings/rust && cargo build --release",
    "rust:test": "cd bindings/rust && cargo test",
    "node:build": "node-gyp rebuild",
    "node:copy-lib": "node copy_rust_lib.js",
    "node:rebuild": "npm run rust:build && npm run node:build && npm run node:copy-lib",
    "node:test": "node bindings/node/binding.spec.js",
    "c:build": "cd bindings/c && make",
    "c:build-script": "cd bindings/c && ./build.sh",
    "c:test": "cd bindings/c && make run",
    "c:clean": "cd bindings/c && make clean",
    "python:prepare": "uv pip install --no-deps --force-reinstall .",
    "python:test": "uv run -m pytest bindings/python/tests/test_binding.py",
    "python:test-ffi": "uv run -m pytest bindings/python/tests/test_ffi.py",
    "python:example-ffi": "cd bindings/python && uv run python example_ffi.py",
    "prepare": "npm run ts:prepare && npm run rust:build && npm run node:copy-lib",
    "dev": "npm run node:rebuild && npm run node:test",
    "rebuild": "npm run rust:build && npm run node:build && npm run node:copy-lib && npm run c:build",
    "test": "npm run ts:test && npm run rust:test && npm run node:test && npm run c:test && npm run python:test"
  },
  "keywords": [
    "tree-sitter",
    "asciimath"
  ],
  "author": "widcardw",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4",
    "tree-sitter": "^0.25.0",
    "tree-sitter-cli": "^0.25.10"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1"
  }
}
